<launch>

  <arg name="model" default="$(find hexapod_vis)/urdf/hexapod2.urdf.xacro"  />
  <arg name="rvizconfig" default="$(find hexapod_vis)/rviz/hexapod.rviz" />

  <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />

  <node name="controller_node" pkg="hexapod_vis" type="controller_node" output="screen" launch-prefix="gnome-terminal --command" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />
  <node name="receiver_node" pkg="hexapod_vis" type="receiver_node" output="screen" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />  

</launch>
